<script>

    const handleImageLoad = (screenSize:number) => {
        const imagePath = screenSize < 768  ? '/images/cut-porsche-taycan-mountain-2.png' : '/images/porsche-taycan-mountain-2.png';
        const imageElement = document.getElementById('porsche-mountains-2') as HTMLImageElement;
        if (imageElement) {
            imageElement.src = imagePath;
        }
    };

    let screenSize = window.innerWidth;

    window.addEventListener('resize', () => {
        screenSize = window.innerWidth;
        handleImageLoad(screenSize);
    });

    handleImageLoad(screenSize);


</script>

