<script>

    const handleImageLoad = (screenSize:number) => {
        const imagePath = screenSize < 768  ? '/images/porsche-mountains.png' : '/images/full-porsche-mountains.png';
        const imageElement = document.getElementById('porsche-mountains') as HTMLImageElement;
        if (imageElement) {
            imageElement.src = imagePath;
        }
    };

    let screenSize = window.innerWidth;

    window.addEventListener('resize', () => {
        screenSize = window.innerWidth;
        handleImageLoad(screenSize);
    });

    handleImageLoad(screenSize);


</script>


